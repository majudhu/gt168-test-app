<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.srtngcmpny.finger.basic.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device : "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spnDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textBaudrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baudrate : "
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spnBaudrate"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:entries="@array/baud_rate" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnOpenDevice"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Open"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/textTemplateNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="ID :"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editUserID"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.8"
                            android:background="#63a7ff"
                            android:editable="true"
                            android:inputType="number"
                            android:text="0" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnEnroll"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Enroll"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnIdentify"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Identify"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnGetEmptyID"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Get Empty ID"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnRemoveTemplate"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Remove Tmpl"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnReadTemplate"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Read Template"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1" >

                        <Button
                            android:id="@+id/btnCaptureImage"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:text="Capture Image"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSetDevPass"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Set Password"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnVerifyImage"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Verify Image"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnCloseDevice"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Close"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Cancel"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnVerify"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Verify"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnIdentifyFree"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="IdentifyFree"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnGetEnrollCount"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Get Enroll Count"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnRemoveAll"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Remove All"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnWriteTemplate"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Write Template"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnGetFWVer"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Get FW Version"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnVerifyPass"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Verify Password"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnIdentifyImage"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:text="Identify Image"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="556dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImageViewer"
                android:layout_width="245dp"
                android:layout_height="200dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.16"
                android:adjustViewBounds="false"
                android:background="#ff99aa" />

            <EditText
                android:id="@+id/editDevPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword">

            </EditText>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_weight="0.45"
                android:text="Please open device!"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
